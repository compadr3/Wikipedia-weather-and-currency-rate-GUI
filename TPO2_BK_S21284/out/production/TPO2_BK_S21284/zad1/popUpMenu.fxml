<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="147.0" prefWidth="312.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="zad1.PopUpWindowController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="312.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <Label text="Input parameters in english" BorderPane.alignment="CENTER" />
         </top>
         <bottom>
            <HBox alignment="CENTER" prefHeight="29.0" prefWidth="312.0" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnOk" mnemonicParsing="false" onAction="#changeData" text="OK" />
                  <Button fx:id="btnCancel" onMouseClicked="#closePopUpWindow" mnemonicParsing="false" text="Cancel" />
               </children>
            </HBox>
         </bottom>
         <right>
            <VBox alignment="CENTER" spacing="2.0" BorderPane.alignment="CENTER_LEFT">
               <children>
                  <TextField fx:id="txtFieldCountry" />
                  <TextField fx:id="txtFieldCity" />
                  <TextField fx:id="txtFieldCurrency" />
               </children>
            </VBox>
         </right>
         <center>
            <VBox alignment="CENTER_RIGHT" prefHeight="101.0" prefWidth="177.0" spacing="10.0" BorderPane.alignment="CENTER_RIGHT">
               <children>
                  <Label prefHeight="17.0" prefWidth="88.0" text="Country:" />
                  <Label prefHeight="17.0" prefWidth="88.0" text="City:" />
                  <Label prefHeight="17.0" prefWidth="88.0" text="Currency code:" />
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
